{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!{% endblock %}

{% block body %}

<div class="card ml-5">
    <div class="card-body">
           <div class="bg-gradient-dark border-radius-lg py-3 pe-1"> <h4 class="card-title text-white">Liste des Professeurs</h4></div>
        <p class="card-text">
        <table class="table table-striped table-hover">
            <thead class="table ">
            <tr class="table-active">
                <th scope="col">id</th>
                <th scope="col">Nom Complet</th>
                <th scope="col">Adresse</th>
                <th scope="col">Grade</th>
                 <th scope="col">  </th>
                <th scope="col">  </th>
                </tr>
                 <button class="btn  bg-gradient-dark" style="margin-left:50rem;"><a href="add-professeur" class="text-white">Ajouter un nouveau professeur</a></button> 

            </thead>
            <tbody>

       {% for profs in professeur %}
               
       
             <tr>
             <td>{{profs.id}}</td>
             <td>{{profs.nomComplet}}</td>
             <td>{{profs.adresse}}</td>
             <td>{{profs.grade}}</td>

           <td><a href="{{ path('edd_professeur', {id:profs.id}) }}" ><button class='btn btn-outline-success'>editer</button></a>&nbsp<button type='button' class='btn btn-outline-danger'>supprimer</button> &nbsp<a href="{{ path('det_professeur', {id:profs.id}) }}" ><button class='btn btn-outline-primary'>detail</button></a><td>


            </tr>
{% endfor %}
               
            </tbody>
        </table>
        </p>
          <div class="d-flex" justify-content-center style="margin-left:50rem" >
        {%  do professeur.setPageRange(10) %}
               {{ knp_pagination_render(professeur,'pagination.html.twig') }}
        </div>  
    </div>
</div>


{% endblock %}


