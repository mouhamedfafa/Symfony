{% endfor %}
               
            </tbody>
        </table>
        </p>
             <div class="d-flex" justify-content-center style="margin-left:50rem" >
        {%  do etudiant.setPageRange(10) %}
               {{ knp_pagination_render(etudiant,'pagination.html.twig') }}
        </div>
    </div>
</div>


              

{% endblock %}


