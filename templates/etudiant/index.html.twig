
{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!{% endblock %}

{% block body %}
<div class="card ml-5">
    <div class="card-body">
        <h4 class="card-title">Liste des Etudiants</h4>
        <p class="card-text">
        <table class="table">
            <thead>
                <tr>
                <th scope="col">id</th>
                <th scope="col">Nom Complet</th>
                <th scope="col">Adresse</th>
                <th scope="col">matricule</th>


                </tr>
            </thead>
            <tbody>
       {% for etu in etudiant %}
       
             <tr>
