{% extends 'base.html.twig' %}



{% block body %}

<div class="card ml-5">
    <div class="card-body">
         <div class="bg-gradient-dark border-radius-lg py-3 pe-1"><h4 class="card-title text-white">Liste des Modules</h4></div>
        <p class="card-text">
        <table class="table table-striped table-hover">
            <thead class="table">
            <tr class="table-active">
                <th scope="col">id</th>
                <th scope="col">Libelle Module</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>

            </thead>
            <tbody>
       {% for mod in module %}
       
             <tr>
             <td>{{mod.id}}</td>
             <td>{{mod.libelleModule}}</td>
                       <td><a href="{{ path('edd_module', {id:mod.id}) }}"> <button class='btn btn-outline-success'>editer</button></a>&nbsp<button type='button' class='btn btn-outline-danger'>supprimer</button> <td>


            </tr>
{% endfor %}
               
            </tbody>
        </table>
        </p>
          <div class="d-flex" justify-content-center style="margin-left:50rem" >
        {%  do module.setPageRange(10) %}
               {{ knp_pagination_render(module,'pagination.html.twig') }}
        </div>  
    </div>
</div>


{% endblock %}


