{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!{% endblock %}

{% block body %}

<div class="">
    <div class="card-body">
          <div class="bg-gradient-dark border-radius-lg py-3 pe-1"> <h4 class="card-title text-white">Liste des Classes</h4></div>
        <p class="card-text">
        <table class="table table-striped table-hover">
            <thead class="table">
                <tr class="table-active"> 
                <th scope="col">Libelle</th>
                <th scope="col">filiere</th>
                <th scope="col">niveau</th>
                <th scope="col">Le Responsable pedagogique</th>
                <th scope="col">  </th>
                 <button class="btn bg-gradient-dark" style="margin-left:50rem;"><a href="add-classe" class="text-white" >Ajouter une nouvelle classe</a></button>
                </tr>
            </thead>
            <tbody>
       {% for classes in classe  %}
        
             <tr>   
             <td>{{classes.libelle}}</td>
             <td>{{classes.filiere}}</td>
             <td>{{classes.niveau}}</td>
             <td>{{classes.rp.getNomComplet() }}</td>

             <td><a href="{{ path('edd_classe', {id:classes.id}) }}"> <button class='btn btn-outline-success'>editer</button></a>&nbsp<button type='button' class='btn btn-outline-danger'>supprimer</button> <td>

            </tr>
{% endfor %}
        
    
            </tbody>
        </table>

        </p>
      <div class="d-flex" justify-content-center style="margin-left:50rem" >
        {%  do classe.setPageRange(10) %}
               {{ knp_pagination_render(classe,'pagination.html.twig') }}
        </div>
    </div>  
</div>

  


{% endblock %}


